import java.util.Scanner;

public class Aula_5 {
    public static void main(String[] args){
        //saida de dados
        System.out.println("Eu faço impressão e pulo a linha");
        System.out.print("eu faço a impressão na mesma linha");
        System.out.printf("eu faço a impressão formatada");
        //entrada de dados
        Scanner scanner = new Scanner(System.in);
        System.out.println("Olá digite o seu nome: ");
        String nome =scanner.nextLine();
        System.out.println("NOME: " + nome);
        //scanner int
        System.out.println("Sua idade: ");
        int idade = scanner.nextInt();
        System.out.println("Idade: " + idade);
        //scanner float
        System.out.println("Seu salario:");
        double salario = scanner.nextDouble();
        System.out.println("Salario: " + salario);
        //boolean
        System.out.println("Sim ou Não");
        boolean simNao = scanner.hasNextBoolean();
        System.out.println(simNao);





    }

}
